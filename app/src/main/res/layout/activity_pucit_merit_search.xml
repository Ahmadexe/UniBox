<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PucitMeritSearch">

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="111dp"
        android:layout_height="75dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/yearPucit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/puiicm" />

    <EditText
        android:id="@+id/yearPucit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint=" Enter year"
        android:inputType="textPersonName"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/degreePucit"
        app:layout_constraintEnd_toEndOf="@+id/degreePucit"
        app:layout_constraintTop_toBottomOf="@+id/imageView40" />

    <EditText
        android:id="@+id/degreePucit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Enter name of program"
        android:inputType="textPersonName"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/searchPucit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearPucit" />

    <Button
        android:id="@+id/searchPucit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/displayPucit"
        app:layout_constraintEnd_toEndOf="@+id/displayPucit"
        app:layout_constraintStart_toStartOf="@+id/displayPucit"
        app:layout_constraintTop_toBottomOf="@+id/degreePucit" />

    <TextView
        android:id="@+id/displayPucit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="47dp"
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPucit" />
</androidx.constraintlayout.widget.ConstraintLayout>