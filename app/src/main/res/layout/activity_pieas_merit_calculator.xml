<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PieasMeritCalculator">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/marksEntryTestPieas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/piicm" />

    <EditText
        android:id="@+id/marksEntryTestPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:hint="Marks in Entry Test"
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/marksInFscPieas"
        app:layout_constraintEnd_toStartOf="@+id/totalMarksinTestPieas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/totalMarksinTestPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Total Marks (Test)"
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/totalFscMarksPieas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marksEntryTestPieas"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/marksInFscPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:hint="Marks in FSc."
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/marksMatricPieas"
        app:layout_constraintEnd_toStartOf="@+id/totalFscMarksPieas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marksEntryTestPieas" />

    <EditText
        android:id="@+id/totalFscMarksPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:ems="10"
        android:hint="Total marks in FSc."
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/totalMatricPieas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marksInFscPieas"
        app:layout_constraintTop_toBottomOf="@+id/totalMarksinTestPieas" />

    <EditText
        android:id="@+id/marksMatricPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="Marks in Matric"
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toTopOf="@+id/resultPieas"
        app:layout_constraintEnd_toStartOf="@+id/totalMatricPieas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marksInFscPieas" />

    <EditText
        android:id="@+id/totalMatricPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="353dp"
        android:ems="10"
        android:hint="Total Marks in Matric"
        android:inputType="number"
        android:textColor="#808080"
        android:textColorHint="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marksMatricPieas"
        app:layout_constraintTop_toBottomOf="@+id/totalFscMarksPieas" />

    <TextView
        android:id="@+id/resultPieas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="61dp"
        android:textColor="#808080"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/resultCalculatePieas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marksMatricPieas" />

    <Button
        android:id="@+id/resultCalculatePieas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="147dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultPieas" />

    <Button
        android:id="@+id/pieasSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pieasSearchWindowOpen"
        android:text="Page 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultCalculatePieas" />
</androidx.constraintlayout.widget.ConstraintLayout>